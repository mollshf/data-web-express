<%- include('layouts/header') %>
<%- include('layouts/nav') %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!data) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    No Data Available
                    <br>
                    <a href="/contact" class="fw-normal">&laquo; Back to Contact</a>
                </div>
            <% } else {%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                <h5 class="card-title"><%= data.nama %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= data.noHP %></h6>
                <p class="card-text"><%= data.email %></p>
                <a href="/contact/edit/<%= data.nama %>" class="btn btn-info badge">Ubah</a>
                <a href="/contact/delete/<%= data.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin Kau mau hapus data ni?')">Hapus</a>
                <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar Contact</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

